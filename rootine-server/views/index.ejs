    <!-- トップ画面 -->
    <section class="top">
      <div class="border">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <div class="detail-arrow vertical-text">←DETAIL</div>
      </div>
      <div class="left-object caption">
        <p><span class="strong">ROOTINE</span>で</p>
        <p>巡ってゆく、</p>
        <p>私達の高専祭。</p>
      </div>
      <div class="app-info">
        <div class="circle"><img src="/images/ROOTINE_logo_color.png"/></div>
        <p>高専祭模擬店アプリ<br><span class="strong">ROOTINE</span></p>
        <button id="logIn" onclick="location.href='login'">ログイン</button>
      </div>
    </section>
